<p>
	Entries cannot share the same email or phone number.
</p>

<p>
    Fill out the fields below to get started:
</p>

<section>

	<table>
		<thead>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
				<th>Phone Number</th>
			</tr>
			<tr>
				<form method="POST">
				<th><input name="Fname"></th>
				<th><input name="Lname"></th>
				<th><input name="emailAddress"></th>
				<th><input name="phone" placeholder="###-###-####"></th>
				<th><button type="submit">Submit</button></th>
				</form>
			</tr>
		</thead>
		<tbody>
			{{#each contacts}}
			<tr class="data">
				<td>{{firstname}}</td>
				<td>{{lastname}}</td>
				<td>{{email}}</td>
				<td>{{phoneNumber}}</td>
				<td>
					<form method="POST" action="/delete">
						<input type="hidden" value="{{email}}" name="emailAddress"/>
						<button type="submit">Delete</button>
					</form>
				</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</section>